
@model OrderingManagementSystem.ViewModel.CustomerInputViewModel

@{
    Layout = "~/Views/Shared/Back_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustomerUpdateInput</title>
</head>
<body>
    <h1>顧客情報メンテナンス</h1>
    <div>顧客情報を更新します。</div>
    <div>更新したい内容を入力して、「送信」ボタンを押してください。</div><br />

    @using (Html.BeginForm("CustomerUpdateConfirm", "CustomerMaster", FormMethod.Post))
    {
        <table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CustomerId)</th>
                <td>@Html.DisplayFor(model => model.CustomerId)</td>
            </tr>
            <tr>
                <th colspan="2" align="center">会社情報</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                <td>
                    @Html.TextBoxFor(model => model.CompanyName, new { style = "width:200px" })
                    @Html.ValidationMessageFor(model => model.CompanyName)
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <td>
                    @Html.TextBoxFor(model => model.Address, new { style = "width:300px" })
                    @Html.ValidationMessageFor(model => model.Address)
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Telno)</th>
                <td>
                    @Html.TextBoxFor(model => model.Telno)
                    @Html.ValidationMessageFor(model => model.Telno)
                </td>
            </tr>
            <tr>
                <th colspan="2" align="center">顧客担当者情報</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                <td>
                    @Html.TextBoxFor(model => model.CustomerName, new { style = "width:200px" })
                    @Html.ValidationMessageFor(model => model.CustomerName)
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CustomerKana)</th>
                <td>
                    @Html.TextBoxFor(model => model.CustomerKana, new { style = "width:200px" })
                    @Html.ValidationMessageFor(model => model.CustomerKana)
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Dept)</th>
                <td>@Html.TextBoxFor(model => model.Dept)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <td>
                    @Html.TextBoxFor(model => model.Email, new { style = "width:300px" })
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th colspan="2" align="center">認証用情報</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <td>
                    @Html.PasswordFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Password_verify)</th>
                <td>
                    @Html.PasswordFor(model => model.Password_verify)
                    @Html.ValidationMessageFor(model => model.Password_verify)
                </td>
            </tr>
        </table><br />
        @Html.HiddenFor(model => model.CustomerId)
        <input type="submit" value="送信" />
        <input type="button" value="戻る" onclick="window.location='@Url.Action("CustomerList", "CustomerMaster")'" />
        <input type="reset" value="クリア" />
    }
</body>
</html>

