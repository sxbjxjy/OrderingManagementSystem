
@model List<OrderingManagementSystem.ViewModel.EmployeeListViewModel>
@*@model List<OrderingManegimentSystem.Models.Employee>*@

@{
    Layout = "~/Views/Shared/Back_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeDeleteConfirm</title>
</head>
<body>
    <h1>担当者情報メンテナンス</h1>
    <div>下記の担当者情報を削除します。</div>
    <div>内容を確認の上、「削除」ボタンを押してください。</div><br />

    @using (Html.BeginForm("EmployeeDelete", "EmployeeMaster", FormMethod.Post))
    {
        <table border="1">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().EmpNo)</th>
                <th>@Html.DisplayNameFor(model => model.First().EmpName)</th>
            </tr>
            @foreach (var item in Model)
            {
                if (item.IsChecked == true)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.EmpNo)</td>
                        <td>@Html.DisplayFor(model => item.EmpName)</td>
                    </tr>
                }
            }

            @for (int i = 0; i < Model.Count(); i++)
            {
                @Html.HiddenFor(model => model[i].EmpNo)
                @Html.HiddenFor(model => model[i].EmpName)
                @Html.HiddenFor(model => model[i].IsChecked)
            }
        </table>

        <input type="submit" value="削除" />
        <input type="button" value="戻る" onclick="window.location='@Url.Action("EmployeeList", "EmployeeMaster")'" />
    }
</body>
</html>
